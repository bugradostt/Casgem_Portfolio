@model Casgem_Portfolio.Models.Entities.TblAdmin

@{
    ViewBag.Title = "AddAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}





<h3>Kullanıcı Ekle</h3>
<hr />
<br />

<form method="post">

    <div>



        <div class="mt-3">

            <label>Adı</label>
            <input type="text" placeholder="Adınız" class="form-control" name="AdminName"  />

        </div>

        <div class="mt-3">

            <label>Kullanıcı Adı</label>
            <input type="text" placeholder="Kullanıcı adınız" class="form-control" name="AdminUserName" />

        </div>

        <div class="mt-3">

            <label>Şifre</label>
            <input type="password" placeholder="Şifreniz" class="form-control" name="AdminPassword"  />

        </div>


       

        <br />
        <a class="btn btn-danger" href="/Admin/AdminList/">İptal</a>

        <input type="submit" class="btn btn-success" value="Kaydet" />

    </div>


</form>


