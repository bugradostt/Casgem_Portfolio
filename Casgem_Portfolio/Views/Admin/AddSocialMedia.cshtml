
@{
    ViewBag.Title = "AddSocialMedia";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h3>Sosyal Medya Ekle</h3>
<hr />

<form method="post" >

    <div class="mt-3">
        <label>Sosyal Medya Adı</label>
        <input type="text" required name="SocialMediaName" class="form-control" placeholder="Sosyal Medya Adı" />

    </div>

    <div class="mt-3">
        <label>Kullanıcı Url</label>
        <input type="text" required name="SocialMediaUrl" class="form-control" placeholder="Kullanıcı url" />

    </div>



    <br />

    <div>
        <a href="/Admin/SocialMedia/" class="btn btn-danger">İptal</a>
        <input type="submit" class="btn btn-success" value="Kaydet" />
    </div>

</form>

