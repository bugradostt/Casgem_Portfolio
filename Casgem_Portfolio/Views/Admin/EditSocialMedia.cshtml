@model Casgem_Portfolio.Models.Entities.TblSocialMedia


@{
    ViewBag.Title = "EditSocialMedia";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h3>Sosyal Medya Ekle</h3>
<hr />

<form method="post">
    <input type="hidden" required name="SocialMediaId" class="form-control" value="@Html.ValueFor(x=>x.SocialMediaId)"/>


    <div class="mt-3">
        <label>Sosyal Medya Adı</label>
        <input type="text" required name="SocialMediaName" class="form-control" value="@Html.ValueFor(x=>x.SocialMediaName)" placeholder="Sosyal Medya Adı" />

    </div>

    <div class="mt-3">
        <label>Kullanıcı Url</label>
        <input type="text" required name="SocialMediaUrl" class="form-control" value="@Html.ValueFor(x=>x.SocialMediaUrl)" placeholder="Kullanıcı url" />

    </div>



    <br />

    <div>
        <a href="/Admin/SocialMedia/" class="btn btn-danger">İptal</a>
        <input type="submit" class="btn btn-warning" value="Güncelle" />
    </div>

</form>

