@model Casgem_Portfolio.Models.Entities.TblResume 


@{
    ViewBag.Title = "EditResume";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<h3>Öz Geçmişimi Güncelle </h3>
<hr />
<br />

<form method="post">
    <input type="hidden"  class="form-control" name="ResumeId" value="@Html.ValueFor(x=>x.ResumeId)" />



    <div class="mt-3">

        <label>Başlık</label>
        <input type="text"  class="form-control" name="ResumeTitle1" value="@Html.ValueFor(x=>x.ResumeTitle1)" />
    </div>

    <div class="mt-3">

        <label>Başlık 2</label>
        <input type="text"  class="form-control" name="ResumeTitle2" value="@Html.ValueFor(x=>x.ResumeTitle2)" />

    </div>



    <div class="mt-3">

        <label>Açıklama</label>
        <textarea rows="6" name="ResumeDescription" class="form-control">@Html.ValueFor(x=>x.ResumeDescription)</textarea>

    </div>




    <br />
    <a class="btn btn-danger" href="/Admin/Resume/">İptal</a>
    <input type="submit" class="btn btn-warning"  value="Güncelle"/>


</form>

