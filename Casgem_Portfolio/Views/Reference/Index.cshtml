@using Casgem_Portfolio.Models.Entities
@model List<TblReference>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h3>Referans Listesi</h3>
<hr />
<a href="/Reference/AddReference/" class="btn btn-success">Referans Ekle</a>
<br />
<br />
<table class="table table-striped">

    <tr>
        <th>#</th>
        <th>Fotoğraf</th>
        <th>Adı Soyadı</th>
        <th>İş Yeri</th>
        <th style="width:350px">Açıklama</th>
        <th></th>
        <th></th>
    </tr>

    @{ int a = 1;}
    @foreach (var i in Model)
    {

        <tr>
            <td>@a</td>
            <td>
                <img src="@i.ReferenceImgUrl" width="100"  />
            </td>
            <td>@i.ReferenceNameSurname</td>
            <td>@i.ReferenceBusinessName</td>
            <td style="text-align:justify">@i.ReferenceDescription</td>
            <td>
                <a href="/Reference/DeleteReference/@i.ReferenceId" class="btn btn-danger">Sil</a>
            </td>
            <td>
                <a href="/Reference/EditReference/@i.ReferenceId" class="btn btn-warning">Güncelle</a>
            </td>

        </tr>
        a++;


    }

</table>

