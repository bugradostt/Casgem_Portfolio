@model Casgem_Portfolio.Models.Entities.TblMessage

@{
    ViewBag.Title = "DetailsMessage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Mesaj Detayı</h3>
<hr />


<div>

    <div class="mt-3">
        <label>Konu</label>
        <input type="text" class="form-control" value="@Html.ValueFor(x=>x.MessageSubject)" disabled />
    </div>

    <div class="mt-3">
        <label>Gönderen</label>
        <input type="text" class="form-control" value="@Html.ValueFor(x=>x.NameSurname)" disabled />
    </div>

    <div class="mt-3">
        <label>Mail Adresi</label>
        <input type="text" class="form-control" value="@Html.ValueFor(x=>x.SenderMail)" disabled />
    </div>

    <div class="mt-3">
        <label>Mesaj</label>
        <textarea class="form-control" disabled rows="6">@Html.ValueFor(x=>x.Content)</textarea>
    </div>

    <div class="mt-3">
        <a href="/Message/Index/" class="btn btn-danger">Geri Dön</a>
    </div>

</div>