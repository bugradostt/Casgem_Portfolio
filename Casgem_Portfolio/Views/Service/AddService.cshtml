

@{
    ViewBag.Title = "AddService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Hizmet Ekle</h3>
<hr />

<form method="post"  action="/Service/AddService/">

    <div class="mt-3">
        <label>Hizmet Başlığı</label>
        <input type="text" required name="ServiceTitle" class="form-control" placeholder="Hizmet başlığı" />

    </div>

    <div class="mt-3">
        <label>Hizmet İkonu</label>
        <input type="text" required name="ServiceIcon" class="form-control" placeholder="Hizmet iconu" />

    </div>

    <div class="mt-3">
        <label>Hizmet Numarası</label>
        <input type="number" required  name="ServiceNumber" class="form-control" placeholder="Hizmet numarası" />

    </div>

    <div class="mt-3">
        <label>Hizmet İçeriği</label>
        <textarea  name="ServiceContent" required class="form-control" placeholder="Hizmet içeriği" rows="6"></textarea>
    </div>

    <br />

    <div>
        <a href="/Service/Index/" class="btn btn-danger">İptal</a>
        <input type="submit"  class="btn btn-success" value="Kaydet"/>
    </div>

</form>

