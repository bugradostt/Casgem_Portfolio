@model List<Casgem_Portfolio.Models.Entities.TblReference>

<!-- testimonials -->
<section class="w3l-clients" id="clients">
    <!-- /grids -->
    <div class="cusrtomer-layout py-5">
        <div class="container py-lg-5 py-md-4">
            <div class="heading text-center mx-auto">
                <h6 class="title-small text-center">Referanslar</h6>
                <h3 class="title-big mb-md-5 mb-4">Takım Arkadaşlarım Benim Hakkımda Ne Düşünüyor? </h3>
            </div>
            <!-- /grids -->
            <div class="testimonial-width">
                <div id="owl-demo1" class="owl-carousel owl-theme mb-4">
                    @foreach (var i in Model)
                    {
                        <div class="item">
                            <div class="testimonial-content">
                                <div class="testimonial">
                                    <blockquote>
                                        <q>
                                            @i.ReferenceDescription
                                        </q>
                                    </blockquote>
                                    <div class="testi-des">
                                        <div class="test-img">
                                            <img src="@i.ReferenceImgUrl" class="img-fluid" alt="client-img">
                                        </div>
                                        <div class="peopl align-self">
                                            <h3>@i.ReferenceNameSurname</h3>
                                            <p class="indentity">@i.ReferenceBusinessName</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    }


                </div>
            </div>
        </div>
        <!-- /grids -->
    </div>
    <!-- //grids -->
</section>
<!-- //testimonials -->